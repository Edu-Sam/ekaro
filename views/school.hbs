
    <div class="row">
          <!-- left column -->
          <div class="col-md-3">
    <div class="card card-info">
        <div class="card-header">
        <h3 class="card-title">Add New</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" action="/schools" method="POST">
        <div class="card-body">
          
            <div class="form-group">
            <label for="name">School Name</label>
            <input type="text" class="form-control" id="name"  name="name">
            </div>
             <div class="form-group">
            <label for="name">School Code</label>
            <input type="text" class="form-control" id="schoolCode"  name="schoolCode">
            </div>
             <div class="form-group">
            <label for="name">School Type</label>
            <select class="form-control" id="typeID" name="typeID">
                {{#each schooltypes}}
                <option value="{{this.id}}">{{this.typeName}}</option>
                {{/each}}
            </select>
            </div>
            <div class="form-group">
            <label for="name">School Ownership Type</label>
            <select class="form-control" id="ownershipID" name="ownershipID">
                {{#each schoolOwnerships}}
                <option value="{{this.id}}">{{this.typeName}}</option>
                {{/each}}
            </select>
            </div>
            <div class="form-group">
            <label for="name">County</label>
            <select class="form-control" id="countyID" name="countyID">
                {{#each counties}}
                <option value="{{this.id}}">{{this.countyName}}</option>
               
                {{/each}}
            </select>

             <input type="hidden" name="county" value="Mombasa">
             
            </div>
            <div class="form-group">
            <label for="name">Contract Type</label>
            <select class="form-control" id="contractTypeID" name="contractTypeID">
                {{#each contractTypes}}
                <option value="{{this.id}}">{{this.typeName}}</option>
                {{/each}}
            </select>
            </div>
             <div class="form-group">
            <label for="name">Contract Value</label>
            <input type="text" class="form-control" id="contractValue"  name="contractValue">
            </div>
             <div class="form-group">
            <label for="name">P.O Box</label>
            <input type="text" class="form-control" id="postalAddress"  name="postalAddress">
            </div>
             <div class="form-group">
            <label for="name">Physical Addres / Location</label>
            <input type="text" class="form-control" id="physicalAddress"  name="physicalAddress">
            </div>
             <div class="form-group">
            <label for="name">Sub-county</label>
            <input type="text" class="form-control" id="subCounty"  name="subCounty">
            </div>
             <div class="form-group">
            <label for="name">Mpesa Paybill</label>
            <input type="text" class="form-control" id="mpesaPaybill"  name="mpesaPaybill">
            </div>
             <div class="form-group">
            <label for="name">Bank Name</label>
            <input type="text" class="form-control" id="bank"  name="bank">
            </div>
             <div class="form-group">
            <label for="name">Branch</label>
            <input type="text" class="form-control" id="branch"  name="branch">
            </div>
             <div class="form-group">
            <label for="name">Bank Account </label>
            <input type="text" class="form-control" id="bankAccount"  name="bankAccount">
            </div>
             <div class="form-group">
            <label for="name">Contact Person Name</label>
            <input type="text" class="form-control" id="contactPersonName"  name="contactPersonName">
            </div>
             <div class="form-group">
            <label for="name">contact Person Phone</label>
            <input type="text" class="form-control" id="contactPersonPhone"  name="contactPersonPhone">
            </div>
             <div class="form-group">
            <label for="name">Contact Person Email</label>
            <input type="text" class="form-control" id="contactPersonEmail"  name="contactPersonEmail">
            </div>
             <div class="form-group">
            <label for="name">Contact Person Role</label>
            <input type="text" class="form-control" id="contactPersonRole"  name="contactPersonRole">
            </div>
            
                        
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary float-right">Submit</button>
        </div>
        </form>
    </div>
</div>
<!-- End Form -->

<div class="col-md-9">

    <div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">School Types</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="c-data" class="table table-bordered table-hover">
        <thead>
        <tr>
            
            <th>School Name</th>
            <th>School Code</th>
            <th>School Type</th>           
            <th>Ownership</th>
            <th>County</th>
            <th>Mpesa Paybill</th>  
            <th>Bank</th>
            <th>Branch</th>
            <th>Bank Account</th>  
            <th>Contact Person name</th>
            <th>Contact person Phone</th>
            <th>Contact Person Role</th>  
            <th>Action</th>  
        </tr>
        </thead>
        <tbody>

                {{#each schools}}

        <tr>
            
            <td> {{this.name}} </td>
            <td> {{this.schoolCode}} </td>
            <td> {{this.schoolTypeID}} </td>
            <td> {{this.ownershipID}} </td>
            <td> {{this.schoolDetails.county}} </td>
            <td> {{this.schoolDetails.mpesaPaybill}} </td>
            <td> {{this.schoolDetails.bank}} </td>
            <td> {{this.schoolDetails.branch}} </td>
            <td> {{this.schoolDetails.bankAccount}} </td>
            <td> {{this.schoolDetails.contactPersonName}} </td>
            <td> {{this.schoolDetails.contactPersonPhone}} </td>
            <td> {{this.schoolDetails.contactPersonRole}} </td>
        

            <td>
                 <a href="schools/edit/{{this.id}}"><button class="btn btn-info btn-xs"><i class="fa fa-edit mr-1" ></i>Edit</button> </a>
                 <a href="/schools/delete/{{this.id}}"><button class="btn btn-danger btn-xs ml-3" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash mr-1" ></i>Delete</button></a> 
            </td>
        </tr>

        {{/each}}

        
        </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    </div>
    <!-- /.card -->
    </div>
    </div>

<script>
    $(document).ready( function () {
    $('#c-data').DataTable({
        dom: 'Bfrtip',
    buttons: [
            'copy', 'csv', 'excel',
            {
                extend: 'pdfHtml5',
                exportOptions: {
                    columns: [ 0, 1 ]
                },
                title: 'eKaro Schools'
            },
             'print'
        ]
    });
} );
</script>