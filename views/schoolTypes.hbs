
    <div class="row">
          <!-- left column -->
          <div class="col-md-3">
    <div class="card card-info">
        <div class="card-header">
        <h3 class="card-title">Add New</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" action="/schoolTypes" method="POST">
        <div class="card-body">
          
            <div class="form-group">
            <label for="name">School Type</label>
            <input type="text" class="form-control" id="typeName"  name="typeName">
            </div>
            <div class="form-group">
            <label for="name">Description</label>
            <textarea class="form-control" name="description" id="description"></textarea>
            </div>
           
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary float-right">Submit</button>
        </div>
        </form>
    </div>
</div>
<!-- End Form -->

<div class="col-md-9">

    <div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">School Types</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="c-data" class="table table-bordered table-hover">
        <thead>
        <tr>
            
            <th>Type Name</th>
            <th>Description</th>
            <th>Action</th>           

        </tr>
        </thead>
        <tbody>

                {{#each schoolTypes}}

        <tr>
            
            <td> {{this.typeName}} </td>
            <td> {{this.description}} </td>
            <td>
                 <a href="schoolTypes/edit/{{this.id}}"><button class="btn btn-info btn-xs"><i class="fa fa-edit mr-1" ></i>Edit</button> </a>
                 <a href="/schoolTypes/delete/{{this.id}}"><button class="btn btn-danger btn-xs ml-3" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash mr-1" ></i>Delete</button></a> 
            </td>
        </tr>

        {{/each}}

        
        </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    </div>
    <!-- /.card -->
    </div>
    </div>

<script>
    $(document).ready( function () {
    $('#c-data').DataTable({
        dom: 'Bfrtip',
    buttons: [
            'copy', 'csv', 'excel',
            {
                extend: 'pdfHtml5',
                exportOptions: {
                    columns: [ 0, 1 ]
                },
                title: 'eKaro School Types'
            },
             'print'
        ]
    });
} );
</script>