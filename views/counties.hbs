
    <div class="row">
          <!-- left column -->
          <div class="col-md-3">
    <div class="card card-info">
        <div class="card-header">
        <h3 class="card-title">Add New</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" action="/counties" method="POST">
        <div class="card-body">
          
            <div class="form-group">
            <label for="name">County Code</label>
            <input type="text" class="form-control" id="countyCode"  name="countyCode">
            </div>
