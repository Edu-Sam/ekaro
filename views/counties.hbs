    </div>
</div>
<!-- End Form -->

<div class="col-md-9">

    <div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Counties</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="c-data" class="table table-bordered table-hover">
        <thead>
        <tr>
            
            <th>County Code</th>
            <th>County Name</th>
            <th>Action</th>           

        </tr>
        </thead>
        <tbody>

                {{#each counties}}

        <tr>
            
            <td> {{this.countyCode}} </td>
            <td> {{this.countyName}} </td>
            <td>
                 <a href="counties/edit/{{this.id}}"><button class="btn btn-info btn-xs"><i class="fa fa-edit mr-1" ></i>Edit</button> </a>
                <a href="/counties/delete/{{this.id}}"><button class="btn btn-danger btn-xs ml-3" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash mr-1" ></i>Delete</button></a> 
            </td>
        </tr>

        {{/each}}

        
        </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    </div>
    <!-- /.card -->
    </div>
    </div>

<script>
    $(document).ready( function () {
    $('#c-data').DataTable();
} );
</script>